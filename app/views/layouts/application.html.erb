<!DOCTYPE html>
<html>
<head>
  <title>Menu</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<script>
	  window.fbAsyncInit = function() {
	    FB.init({
	      appId      : '956566351050585',
	      xfbml      : true,
	      version    : 'v2.3'
	    });
	  };

	  (function(d, s, id){
	     var js, fjs = d.getElementsByTagName(s)[0];
	     if (d.getElementById(id)) {return;}
	     js = d.createElement(s); js.id = id;
	     js.src = "//connect.facebook.net/en_US/sdk.js";
	     fjs.parentNode.insertBefore(js, fjs);
	   }(document, 'script', 'facebook-jssdk'));
	</script>

<!-- 	<div class="fb-login-button" data-max-rows="1" data-size="medium" data-show-faces="true" data-auto-logout-link="false"></div> -->

<nav class="navbar navbar-default navbar-fixed-top">
	<div class="container-fullwidth" id="header-navbar">
  <% if current_user %>
  	<span class="left-align">Signed in as <%= current_user.name %></span>
    <%= link_to "Sign out", logout_path, id: "sign_out" %>
  <% else %>
  	<span class="left-align">Please sign in with Facebook to access Admin priviledges</span>
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
  <% end %>		
	</div>
</nav>

<%= yield %>

	<div
  class="fb-like"
  data-share="true"
  data-width="450"
  data-show-faces="true">
	</div>

</body>

</html>
