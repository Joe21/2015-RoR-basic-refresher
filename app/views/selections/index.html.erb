<h1 id="main-header">Menu</h1>

<%= link_to('New Selection', new_selection_path, :class => 'btn btn-xs btn-info') %>

<h3 class="course-header">Appetizers
	<span class="total-container">(Total: <%= @appetizers.count %>)</span>
</h3>	
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th class="th-text-align-center">Dish</th>
			<th class="th-text-align-center">Description</th>
			<th class="th-text-align-center">Image</th>
			<th class="th-text-align-center">Price</th>
		</tr>
	</thead>

	<% @appetizers.each do |appetizer| %>
	<tbody>
		<td>
			<%= appetizer.name %>
			<br>
			<% if current_user %>
				<div class="btn-group">
					<%= link_to('Edit', edit_selection_path(appetizer.name), :class => 'btn btn-xs btn-info') %>
					<%= link_to('Delete', selection_path(appetizer.name), :method=> 'DELETE', :class => 'btn btn-xs btn-danger', :data => { :confirm => 'Are you sure you want to delete this selection?'}) %>
				</div>
			<% else %>
				<div class="btn-group">
					<%= link_to('Edit', edit_selection_path(appetizer.name), :class => 'btn btn-xs btn-info', :disabled => true) %>
					<%= link_to('Delete', selection_path(appetizer.name), :method=> 'DELETE', :class => 'btn btn-xs btn-danger', :disabled => true) %>
				</div>
			<% end %>
		</td>
		<td><%= appetizer.description %></td>
		<td class="td-no-padding"><%= image_tag appetizer.image_url %></td>
		<td><%= number_to_currency(appetizer.price) %></td>
	</tbody>
	<% end %>
</table>

