<h1 id="main-header">Menu</h1>
<h3 class="course-header">Appetizers
	<span class="total-container">(Total: <%= @appetizers.count %>)</span>
</h3>	
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th class="th-text-align-center">Dish</th>
			<th class="th-text-align-center">Description</th>
			<th class="th-text-align-center">Image</th>
			<th class="th-text-align-center">Price</th>
		</tr>
	</thead>

	<% @appetizers.each do |appetizer| %>
	<tbody>
		<td><%= appetizer.name %></td>
		<div>
			<td>
				<%= appetizer.description %>
<!-- 				<div class="selection-option-menu">
					<button type="button" class="btn btn-info">Edit</button>
					<button type="button" class="btn btn-danger">Delete</button>
				</div> -->
			</td>
		</div>
		<td class="td-no-padding"><%= image_tag appetizer.image_url %></td>
		<td><%= number_to_currency(appetizer.price) %></td>
	</tbody>
	<% end %>
</table>

<hr>

